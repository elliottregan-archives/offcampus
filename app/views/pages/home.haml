%section
  %a.homepage_link_padding.students{:href => '/list'}
    .homepage_link
      %p Students: 
      %p View All Listings
  %a.homepage_link_padding.landlords{:href => '/landing'}
    .homepage_link
      %p Landlords:
      %p Add Your Property
%section.clear
  #big_map.homepage_map

%section.featured
  - @featured.each do |property|

    %a.property{:href => 'properties/' + property.id.to_s }
      .photo
        - if property.has_photo?
          = image_tag property.featured_photo.photo.url(:thumb)

      .description
        %h4
          = property.address

        %p
          = property.bedrooms
          bedrooms

        %p
          = "$" + property.price.round.to_s
          per 
          = property.unit 

  .homepage_link_padding.full_width
    = link_to 'Landlords, get your properties featured right here on the homepage!', { :action => 'landing' }, { :class => 'homepage_link' }
